{
  "name": "@lanonasis/enterprise-mcp",
  "version": "1.0.0",
  "description": "Enterprise MCP Server for Lanonasis - 28 tools with circuit breaker, caching, metrics, and content chunking",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "lanonasis-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:stdio": "node dist/index.js --stdio",
    "start:http": "node dist/index.js --http",
    "dev": "tsx src/index.ts",
    "dev:stdio": "tsx src/index.ts --stdio",
    "dev:http": "tsx src/index.ts --http",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "test": "vitest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "axios": "^1.7.9",
    "axios-retry": "^4.5.0",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "winston": "^3.17.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "Lanonasis Team",
  "license": "MIT"
}
